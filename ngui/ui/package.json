{
  "name": "ngui",
  "version": "0.3.0",
  "private": true,
  "dependencies": {
    "d3-scale": "^4.0.2"
  },
  "scripts": {
    "start": "vite",
    "start:ci": "npm ci --ignore-scripts && npm start",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ci": "vitest -u --silent",
    "lint:check": "eslint . --ext .ts,.tsx --max-warnings=0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "storybook": "start-storybook -p 9009 -s public",
    "storybook:build": "build-storybook -o ./storybook -s public",
    "storybook:clean": "rm -rf src/tests/__snapshots__",
    "prettier:check": "prettier --check 'src/**/*.{ts,tsx,json}'",
    "prettier:fix": "prettier --write 'src/**/*.{ts,tsx,json}'",
    "translate:fix": "prettier --write 'src/translations/**/*.json'",
    "translate:sort": "node src/translations/sortTranslations.ts",
    "check": "npm run lint:check && npm run prettier:check",
    "fix": "npm run lint:fix && npm run prettier:fix",
    "fix:all": "npm run fix && npm run translate:sort && npm run translate:fix",
    "type:check": "tsc"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
